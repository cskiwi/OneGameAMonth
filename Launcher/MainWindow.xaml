<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="Location" HorizontalAlignment="Left" Height="26" Margin="110,10,0,0" Text="" VerticalAlignment="Top" Width="330" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
        <Label Content="Games Location: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" />
        <Label Content="Availible Games" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" />
        <ListBox x:Name="gameList" HorizontalAlignment="Left" Height="243" Margin="10,66,0,0" VerticalAlignment="Top" Width="160" SelectionChanged="Changed" />
        <Label x:Name="Description"  HorizontalAlignment="Left" Margin="175,66,0,0" VerticalAlignment="Top" Height="243" Width="332" />
        <Button Content="Recheck" HorizontalAlignment="Left" Margin="104,43,0,0" VerticalAlignment="Top" Width="66" />
        <Button x:Name="DownloadOrPlay" Content="Download" HorizontalAlignment="Left" Margin="175,43,0,0" VerticalAlignment="Top" Width="76" Visibility="Hidden" Click="DownloadOrPlay_Click" />
    </Grid>
</Window>